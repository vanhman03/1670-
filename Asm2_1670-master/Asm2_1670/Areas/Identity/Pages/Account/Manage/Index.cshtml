@page
@model IndexModel
<body>
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="theme-layout" id="scrollup">
	<section class="overlape">
				<div class="block no-padding">
					<div data-velocity="-.1" style="background: url(images/mslider1.jpg) repeat scroll 50% 422.28px transparent;" class="parallax scrolly-invisible no-parallax"></div><!-- PARALLAX BACKGROUND IMAGE -->
					<div class="container fluid">
						<div class="row">
							<div class="col-lg-12">
								<div class="inner-header">
									<h3>Welcome @Model.Input.Name</h3>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		@if (User.IsInRole("Employer"))
		{
			<section>
				<div class="block no-padding">
					<div class="container">
						<div class="row no-gape">
							<aside class="col-lg-3 column border-right">
								<div class="widget">
									<div class="tree_widget-sec">
										<ul>
											<li><a href="employer_profile.html" title=""><i class="la la-file-text"></i>Company Profile</a></li>
											<li><a href="employer_manage_jobs.html" title=""><i class="la la-briefcase"></i>Manage Jobs</a></li>
											<li><a href="employer_transactions.html" title=""><i class="la la-money"></i>Transactions</a></li>
											<li><a href="employer_resume.html" title=""><i class="la la-paper-plane"></i>Resumes</a></li>
											<li><a href="employer_packages.html" title=""><i class="la la-user"></i>Packages</a></li>
											<li><a href="employer_post_new.html" title=""><i class="la la-file-text"></i>Post a New Job</a></li>
											<li><a href="employer_job_alert.html" title=""><i class="la la-flash"></i>Job Alerts</a></li>
											<li><a href="employer_change_password.html" title=""><i class="la la-lock"></i>Change Password</a></li>
											<li><a href="#" title=""><i class="la la-unlink"></i>Logout</a></li>
										</ul>
									</div>
								</div>
							</aside>
							<div class="col-lg-9 column">
								<div class="padding-left">
									<div class="profile-title" id="mp">
										<h3>My Profile</h3>
									</div>
									<div class="profile-form-edit">
										<form id="profile-form" method="post" enctype="multipart/form-data">
											<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
											<div class="upload-img-bar">
												<span><img src="@Model.Input.ImageUrl" alt=""><i>x</i></span>
												<div class="upload-info">
													<input asp-for="Input.ImageUrl" type = "file" name = "file" class="form-control">
													<span>Max file size is 1MB, Minimum dimension: 270x210 And Suitable files are .jpg &amp; .png</span>
												</div>
											</div>
											<div class="row">
												<div class="col-lg-6">
													<span class="pf-title">Company Name</span>
													<div class="pf-field">
														<input asp-for="Input.Name" type="text" placeholder="Tera Planer">
														<span asp-validation-for="Input.Name" class="text-danger"></span>
													</div>
												</div>
												<div class="col-lg-3">
													<span class="pf-title">Since</span>
													<div class="pf-field">
														<input asp-for="Input.Since" type="text" placeholder="1991">
														<span asp-validation-for="Input.Since" class="text-danger"></span>
													</div>
												</div>
												<div class="col-lg-3">
													<span class="pf-title">Team Size</span>
													<div class="pf-field">
														<input asp-for="Input.TeamSize" type="text" placeholder="100 - 201">
														<span asp-validation-for="Input.TeamSize" class="text-danger"></span>
													</div>
												</div>
												<div class="col-lg-12">
													<span class="pf-title">Description</span>
													<div class="pf-field">
														<textarea asp-for="Input.Description"></textarea>
														<span asp-validation-for="Input.Description" class="text-danger"></span>
													</div>
												</div>
												<div class="col-lg-6">
													<span class="pf-title">Phone Number</span>
													<div class="pf-field">
														<input asp-for="Input.PhoneNumber" type="text"/>
														<span asp-validation-for="Input.Country" class="text-danger"></span>
													</div>
												</div>
												<div class="col-lg-6">
													<span class="pf-title">Email</span>
													<div class="pf-field">
														<input asp-for="Username" disabled type="text"/>
														<span asp-validation-for="Input.Country" class="text-danger"></span>
													</div>
												</div>
												<div class="col-lg-6">
													<span class="pf-title">Country</span>
													<div class="pf-field">
														<input asp-for="Input.Country" type="text"/>
														<span asp-validation-for="Input.Country" class="text-danger"></span>
													</div>
												</div>
												<div class="col-lg-6">
													<span class="pf-title">City</span>
													<div class="pf-field">
														<input asp-for="Input.City" type="text"/>
														<span asp-validation-for="Input.City" class="text-danger"></span>
													</div>
												</div>
												<div class="col-lg-12">
													<button id="update-profile-button" type="submit">Update</button>
												</div>
											</div>
										</form>
									</div>
									<div class="social-edit" id="sn">
										<h3>Social Edit</h3>
										<div class="row">
											<div class="col-lg-6">
												<span class="pf-title">Facebook</span>
												<div class="pf-field">
													<input type="text" placeholder="www.facebook.com/TeraPlaner">
													<i class="fa fa-facebook"></i>
												</div>
											</div>
											<div class="col-lg-6">
												<span class="pf-title">Twitter</span>
												<div class="pf-field">
													<input type="text" placeholder="www.twitter.com/TeraPlaner">
													<i class="fa fa-twitter"></i>
												</div>
											</div>
											<div class="col-lg-6">
												<span class="pf-title">Google</span>
												<div class="pf-field">
													<input type="text" placeholder="www.google-plus.com/TeraPlaner">
													<i class="la la-google"></i>
												</div>
											</div>
											<div class="col-lg-6">
												<span class="pf-title">Linkedin</span>
												<div class="pf-field">
													<input type="text" placeholder="www.Linkedin.com/TeraPlaner">
													<i class="fa fa-linkedin"></i>
												</div>
											</div>

										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		}
