@using Asm2_1670.Models.ViewModels;
@model ResumeVM
<body>
<div class="theme-layout" id="scrollup">
	<section class="overlape">
		<div class="block no-padding">
			<div data-velocity="-.1" style="background: url(images/mslider1.jpg) repeat scroll 50% 422.28px transparent;" class="parallax scrolly-invisible no-parallax"></div><!-- PARALLAX BACKGROUND IMAGE -->
			<div class="container fluid">
				<div class="row">
					<div class="col-lg-12">
						<div class="inner-header">
							<h3>Welcome @ViewBag.Name</h3>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section>
		<div class="block remove-top">
			<div class="container">
				 <div class="row no-gape">
					 <aside class="col-lg-3 column border-right">
						 <div class="widget">
							 <div class="tree_widget-sec">
								 <ul>
									 <li><a href="candidates_profile.html" title=""><i class="la la-file-text"></i>My Profile</a></li>
									<li><a href="candidates_my_resume.html" title=""><i class="la la-briefcase"></i>My Resume</a></li>
									<li><a href="candidates_shortlist.html" title=""><i class="la la-money"></i>Shorlisted Job</a></li>
									<li><a href="candidates_applied_jobs.html" title=""><i class="la la-paper-plane"></i>Applied Job</a></li>
									<li><a href="candidates_job_alert.html" title=""><i class="la la-user"></i>Job Alerts</a></li>
									<li><a href="candidates_cv_cover_letter.html" title=""><i class="la la-file-text"></i>Cv &amp; Cover Letter</a></li>
									<li><a href="candidates_change_password.html" title=""><i class="la la-flash"></i>Change Password</a></li>
									<li><a href="#" title=""><i class="la la-unlink"></i>Logout</a></li>
								 </ul>
							 </div>
						 </div>
					 </aside>
					 <div class="col-lg-9 column">
						 <div class="padding-left">
							 <div class="manage-jobs-sec">
								 <div class="border-title"><h3>Candidates Dashboard</h3><a asp-controller="Profile" asp-action="AddEducation"><i class="la la-plus"></i> Add Education</a></div>
								 <div class="edu-history-sec">
									 @foreach(var education in Model.ListEducation)
									 {
									 <div class="edu-history">
										 <i class="la la-graduation-cap"></i>
										 <div class="edu-hisinfo">
											 <h3>@education.Title</h3>
											 <i>@education.StartTime - @education.EndTime</i>
											 <span>@education.University <i>@education.Major</i></span>
											 <p>@education.Description</p>
										 </div>
										 <ul class="action_job">
											 <li><span>Edit</span><a asp-controller="Profile" asp-action="EditEducation" asp-route-id="@education.Id"><i class="la la-pencil"></i></a></li>
											 <li><span>Delete</span><a asp-controller="Profile" asp-action="DeleteEducation" asp-route-id="@education.Id"><i class="la la-trash-o"></i></a></li>
										 </ul>
									 </div>
									 }
								 </div>
								 <div class="border-title"><h3>Work Experience</h3><a asp-controller="Profile" asp-action="AddWorkExperience"><i class="la la-plus"></i> Add Experience</a></div>
								 <div class="edu-history-sec">
									 @foreach(var exp in Model.ListWorkExp){
									 <div class="edu-history style2">
										 <i></i>
										 <div class="edu-hisinfo">
											 <h3>@exp.Title <span>@exp.Company</span></h3>
											 <i>@exp.StartTime - @exp.EndTime</i>
											 <p>@exp.Description</p>
										 </div>
										 <ul class="action_job">
											 <li><span>Edit</span><a href="#" title=""><i class="la la-pencil"></i></a></li>
											 <li><span>Delete</span><a href="#" title=""><i class="la la-trash-o"></i></a></li>
										 </ul>
									 </div>
									 }
								 </div>
								 @*<div class="border-title"><h3>Portfolio</h3><a asp-controller="Profile" asp-action="AddPortfolio"><i class="la la-plus"></i> Add Portfolio</a></div>
								 <div class="mini-portfolio">
									 <div class="mp-row">
										 @foreach(var p in Model.ListPortfolio){
										 <div class="mp-col">
											 <div class="mportolio"><img src="@p.ImageUrl" alt=""><a href="#" title=""><i class="la la-search"></i></a></div>
											 <ul class="action_job">
												 <li><span>Edit</span><a href="#" title=""><i class="la la-pencil"></i></a></li>
												 <li><span>Delete</span><a href="#" title=""><i class="la la-trash-o"></i></a></li>
											 </ul>
										 </div>
										 }
									 </div>
								 </div>*@
								 <div class="border-title"><h3>Awards</h3><a asp-controller="Profile" asp-action="AddAward"><i class="la la-plus"></i> Add Awards</a></div>
								 <div class="edu-history-sec">
									 @foreach(var a in Model.ListAward){
									 <div class="edu-history style2">
										 <i></i>
										 <div class="edu-hisinfo">
											 <h3>@a.Title</h3>
											 <i>@a.StartTime - @a.EndTime</i>
											 <p>@a.Description</p>
										 </div>
										 <ul class="action_job">
											 <li><span>Edit</span><a href="#" title=""><i class="la la-pencil"></i></a></li>
											 <li><span>Delete</span><a href="#" title=""><i class="la la-trash-o"></i></a></li>
										 </ul>
									 </div>
									 }
								 </div>
							 </div>
						 </div>
					</div>
				 </div>
			</div>
		</div>
	</section>
</div>
</body>